<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin2"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/firstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin2"
        android:padding="@dimen/padding2"
        android:layout_above="@+id/LLcen">
        <LinearLayout
            android:id="@+id/cari_guru"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin2"
            android:background="@drawable/shape"
            >

            <ImageView
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:src="@drawable/teacher"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari Guru"
                android:layout_marginLeft="@dimen/margin2"
                android:textSize="22sp"
                android:textColor="@color/fontDark"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLcen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_below="@+id/firstLL"
        >
        <LinearLayout
            android:id="@+id/jadwal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/date"
                android:background="@drawable/shape"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/guruSaya"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_school_black_24dp"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Les Saya"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pembayaranIV"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_credit_card_black_24dp"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pembayaran"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>