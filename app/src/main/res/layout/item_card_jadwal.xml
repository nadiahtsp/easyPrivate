<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape">
    <LinearLayout
        android:padding="@dimen/margin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:background="@drawable/button_muda"
        >
    <TextView
        android:id="@+id/jamTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17.00-18.00"
        android:textColor="@color/white"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoCIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/account_default"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_marginRight="@dimen/margin2"
            android:layout_gravity="center_vertical"
            />

    <LinearLayout
        android:padding="@dimen/margin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mapelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematika"
            android:textColor="@color/fontDark"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/namaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anisa Nurul"
            android:textColor="@color/fontDark"
            android:textSize="14sp"
            />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>